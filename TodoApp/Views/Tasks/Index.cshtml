@model List<TodoApp.Models.Task>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>📝 To-Do List</h1>

<form asp-controller="Tasks" asp-action="Add" method="post">
    @Html.AntiForgeryToken()
    <input type="text" name="description" placeholder="Nouvelle tâche" required />
    <button type="submit">Ajouter</button>
</form>

<ul>
@foreach (var task in Model)
{
    <li>
        @if (task.IsComplete)
        {
            <del>@task.Description</del>
        }
        else
        {
            @task.Description
            <a href="/Tasks/MarkDone/@task.Id">✅</a>
        }
        <a href="/Tasks/Delete/@task.Id">🗑️</a>
    </li>
}
</ul>
